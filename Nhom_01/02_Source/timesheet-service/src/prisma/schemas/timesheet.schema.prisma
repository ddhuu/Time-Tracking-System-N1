enum TimesheetStatus {
  NORMAL
  PENDING
  REJECTED
}

model Timesheet {
  id          Int             @id @default(autoincrement())
  description String?
  status      TimesheetStatus @default(PENDING)

  start_time DateTime  @default(now())
  end_time   DateTime?
  duration   Int?

  user_id  String
  username String?

  project_id  Int?
  activity_id Int?
  task_id     Int?

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@map("timesheets")
}
