model Team {
  id    Int      @id @default(autoincrement())
  name  String
  color String?
  lead  String?
  users String[]

  projects   Project[]  @relation("ProjectTeam")
  activities Activity[]

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@map("teams")
}
