model Customer {
    id             Int     @id @default(autoincrement())
    name           String
    color          String?
    description    String?
    address        String
    company_name   String
    account_number String
    vat_id         String
    country        String
    currency       String?
    timezone       String?
    email          String
    phone          String
    homepage       String?

    projects Project[]

    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    deleted_at DateTime?

    @@map("customers")
}
